"set guifont=Envy\ Code\ R\ 10
set guifont=DejaVu\ Sans\ Mono\ 12
"set guifont=GohuFont\ 8
set lines=41 columns=84
set background=dark
set guioptions-=T
set showtabline=2
colorscheme CapsulaPigmentorum

" Windows: move ~\_vim to ~\vimfiles
" set guifont=DejaVu\ Sans\ Mono:h10
"colorscheme paintbox2
"colorscheme dbb

" horizontal lines
hi User1 guibg=#090909 guifg=#212121 gui=none
" char info
hi User2 guibg=#090909 guifg=#4c92d9 gui=none
" line, col
hi User3 guibg=#090909 guifg=#cc3629 gui=none
" [+]
hi User4 guibg=#090909 guifg=#924cd9 gui=none
" file
hi User5 guibg=#090909 guifg=#67c439 gui=none
 

nmap <leader>r @:
